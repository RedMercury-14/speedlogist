<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
	http://www.springframework.org/schema/security 
	http://www.springframework.org/schema/security/spring-security-5.6.xsd
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean
		class="org.springframework.security.web.access.expression.DefaultWebSecurityExpressionHandler" />
	<security:http auto-config="true" use-expressions="true" >
		<security:form-login login-page="/main/signin" 
			login-processing-url="/main/signinpost"	username-parameter="login"	password-parameter="password" default-target-url="/main" always-use-default-target="true" />
			<security:logout logout-url="/logout" logout-success-url="/main/signin?logout=true" />			
			<security:intercept-url pattern="/main/signin"	access="hasRole('ROLE_ANONYMOUS')" />
			<security:intercept-url pattern="/main/registration" access="hasAnyRole('ROLE_ANONYMOUS', 'ROLE_ADMIN')" />	
			<security:intercept-url pattern="/main" access="hasAnyRole('ROLE_ANONYMOUS', 'ROLE_ADMIN', 'ROLE_MANAGER','ROLE_TOPMANAGER', 'ROLE_SHOP', 'ROLE_CARRIER', 'ROLE_STOCK', 'ROLE_PROCUREMENT', 'ROLE_ORDERSUPPORT', 'ROLE_STOCKSUPPORT', 'ROLE_SLOTOBSERVER', 'ROLE_ANALYTICS', 'ROLE_STOCKPROCUREMENT')" />	
			<security:intercept-url pattern="/main/message" access="!isAnonymous()" />					
			<security:intercept-url pattern="/main/who"	access="!isAnonymous()" />
			<security:intercept-url pattern="/main/admin/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_TOPMANAGER')" />
			<security:intercept-url	pattern="/main/logistics/**" access="hasAnyRole('ROLE_MANAGER','ROLE_TOPMANAGER', 'ROLE_ADMIN')" />
			<security:intercept-url pattern="/main/shop/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_SHOP')"/>
			<security:intercept-url pattern="/main/analytics/changing-matrix" access="hasAnyRole('ROLE_ADMIN', 'ROLE_ANALYTICS', 'ROLE_PROCUREMENT')"/>
			<security:intercept-url pattern="/main/analytics/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_ANALYTICS', 'ROLE_TOPMANAGER')"/>
			<security:intercept-url pattern="/main/carrier/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_CARRIER')"/>
			<security:intercept-url pattern="/main/order-support/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_ORDERSUPPORT')"/>
			<security:intercept-url pattern="/main/stock-support/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_STOCKSUPPORT')"/>
<!-- 			<security:intercept-url pattern="/main/map/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_CARRIER')"/> -->
			<security:intercept-url pattern="/main/procurement/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_PROCUREMENT', 'ROLE_ORDERSUPPORT', 'ROLE_STOCKPROCUREMENT', 'ROLE_SLOTOBSERVER')"/>
			<security:intercept-url pattern="/main/slots/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_PROCUREMENT', 'ROLE_ORDERSUPPORT', 'ROLE_TOPMANAGER','ROLE_MANAGER', 'ROLE_SLOTOBSERVER', 'ROLE_STOCKPROCUREMENT')"/>
			<security:intercept-url pattern="/main/depot/**" access="hasAnyRole('ROLE_ADMIN', 'ROLE_STOCK', 'ROLE_MANAGER', 'ROLE_TOPMANAGER')"/>
			<security:intercept-url pattern="/main/registration/**" access="hasAnyRole('ROLE_ANONYMOUS', 'ROLE_ADMIN')" />	
			<security:intercept-url pattern="/main/userpage/**" access="!isAnonymous()" />			
			<security:intercept-url pattern="/api/map/**" access="!isAnonymous()" />			
			<security:intercept-url pattern="/main/**" access="hasRole('ROLE_ADMIN')" />
<!-- 			<security:csrf disabled="true"/> -->
	</security:http>
	

	<security:authentication-manager
		alias="authenticationManager">
		<security:authentication-provider
			user-service-ref="userDetailsServiceImpl">
			<security:password-encoder ref="encoder"></security:password-encoder>
		</security:authentication-provider>
	</security:authentication-manager>

	<bean id="userDetailsServiceImpl"
		class="by.base.main.service.impl.UserDetailsServiceImpl">
	</bean>
	<bean id="encoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
		<constructor-arg name="strength" value="11" />
	</bean>

</beans>